@model Clinica.Models.Boleta
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Register</title>

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="css/sb-admin-2.min.css" rel="stylesheet">

</head>
<body class="bg-gradient-primary">
    <center>


        <div class="container">

            <div class="">
                <div class="">
                    <!-- Nested Row within Card Body -->


                    <div class="row">
                        <div class="col-lg-5 d-none  bg-light"> </div>
                        <div class="col-lg-10">
                            <div class="p-5">
                                <div class="text-center">
                                    <div class="card-body">

                                        <div class="card shadow mb-4">
                                            <div class="card-header py-3">

                                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                                    <h1 class="h4 text-gray-900 mb-4">Ver Boleta!</h1>
                                                    <hr />
                                            </div>
                                            <form form method="POST" action="@Url.Action("Index", "Boletas")" class="user">


                                                <div class="form-group row">
                                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                                        <label>N° de Boleta</label>
                                                        <input type="number" class="form-control form-control-user" placeholder="N° Boleta" value="@Model.NB" disabled>
                                                    </div>

                                                    <div class="col-sm-6">
                                                        <label>Odontologo</label>
                                                        @foreach (Clinica.Models.Odontologo o in ViewBag.odontologos)
                                                        {
                                                            if (Model.IdOdontologo == o.Id)
                                                            {
                                                                <input type="text" class="form-control form-control-user" placeholder="Odontologo" value="@o.Nombres @o.Apellidos" disabled>
                                                            }

                                                        }

                                                    </div>


                                                </div>

                                                <div class="form-group">
                                                    <center>

                                                        <label for="sel1" style="color:#212F3D"> Paciente :</label>
                                                    </center>
                                                    @foreach (Clinica.Models.Paciente p in ViewBag.pacientes)
                                                    {
                                                        if (Model.IdPaciente == p.Id)
                                                        {
                                                            <input type="text" class="form-control form-control-user" placeholder="Paciente" value="@p.Nombre @p.Apellido" disabled>
                                                        }

                                                    }



                                                <div class="form-group">
                                                    <center>

                                                        <label for="sel1" style="color:#212F3D"> Tratamiento :</label>
                                                    </center>
                                                    @foreach (Clinica.Models.Tratamiento t in ViewBag.tratamientos)
                                                    {
                                                        if (Model.IdTratamiento == t.Id)
                                                        {
                                                            <input type="text" class="form-control form-control-user" placeholder="Tratamiento" value="@t.Nombres " disabled>
                                                        }

                                                    }






                                                    <div class="form-group row">
                                                        <div class="col-sm-6 mb-3 mb-sm-0">
                                                            <label>Fono</label>
                                                            <input type="number" class="form-control form-control-user" placeholder="Fono" value="@Model.Fono" disabled>
                                                        </div>

                                                        <div class="col-sm-6">
                                                            <label>Fecha</label>
                                                            <input type="datetime" class="form-control form-control-user" placeholder="Fecha" value="@Model.Fecha" disabled>
                                                        </div>
                                                    </div>

                                                    <div class="form-group row">
                                                        <div class="col-sm-6 mb-3 mb-sm-0">
                                                            <label>Valor</label>
                                                            <input type="number" class="form-control form-control-user" placeholder="Valor" value="@Model.Valor" disabled>
                                                        </div>

                                                        <div class="col-sm-6">
                                                           
                                                                <label>Detalle</label>
                                                                <input type="text" class="form-control form-control-user" placeholder="Detalle" value="@Model.Detalle" disabled>
                                                            </div>
                                                        </div>
                                                            <br />
                                                            <center>
                                                                <button type="submit" class="btn btn-primary">Volver</button>
                                                            </center>
                                                            </a>

</form>



                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                </table>


            </div>
        </div>
        <!-- Bootstrap core JavaScript-->
        <script src="vendor/jquery/jquery.min.js"></script>
        <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Core plugin JavaScript-->
        <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

        <!-- Custom scripts for all pages-->
        <script src="js/sb-admin-2.min.js"></script>
    </center>
</body>

</html>