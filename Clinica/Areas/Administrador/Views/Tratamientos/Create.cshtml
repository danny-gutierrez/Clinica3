@model Clinica.Models.Tratamiento

<!DOCTYPE html>
<html lang="en">

<head>


    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Register</title>

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="css/sb-admin-2.min.css" rel="stylesheet">
    <script type="text/javascript">
        function ConfirmDemo() {
            //Ingresamos un mensaje a mostrar
            var mensaje = confirm("Desea Guardar Tratamiento");
            //Detectamos si el usuario acepto el mensaje
            if (mensaje) {
                alert("¡Gracias por aceptar!");
            }
            //Detectamos si el usuario denegó el mensaje
            else {
                alert("¡Haz denegado el mensaje!");
            }
        }
    </script>

</head>



<body class="bg-gradient-primary">
    <center>


        <div class="container">

            <div class="">
                <div class="">
                    <!-- Nested Row within Card Body -->


                    <div class="row">
                        <div class="col-lg-5 d-none  bg-light"> </div>
                        <div class="col-lg-10">
                            <div class="p-5">
                                <div class="text-center">
                                    <div class="card-body">

                                        <div class="card shadow mb-4">
                                            <div class="card-header py-3">

                                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                                    <h1 class="h4 text-gray-900 mb-4">Crear Tratamiento</h1>
                                                    <hr />
                                            </div>


                                            <form method="POST" action="@Url.Action("Create", "Tratamientos")" class="user">
                                                <div class="form-group row">
                                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                                        <label>Nombre del Tratamiento</label>
                                                        <input type="text" class="form-control form-control-user" placeholder="Ingrese Nombre Tratamiento"
                                                               name="Nombres" value="@Model.Nombres">
                                                        @Html.ValidationMessageFor(Model => Model.Nombres, null, new { @class = "text-danger" })

                                                    </div>


                                                    <div class="col-sm-6">
                                                        <label>Valor</label>
                                                        <input type="number" class="form-control form-control-user" placeholder="Ingrese Valor Tratamiento"
                                                               name="Valor" value="@Model.Valor">
                                                        @Html.ValidationMessageFor(Model => Model.Valor, null, new { @class = "text-danger" })

                                                    </div>

                                                </div>

                                                <div class="form-group">
                                                    <center>

                                                        <label for="sel1" style="color:#212F3D"> Odontologo:</label>
                                                    </center>
                                                    <select class="form-control" name="idOdontologo" value="@Model.Odontologo">

                                                        @foreach (Clinica.Models.Odontologo odontologo in ViewBag.odontologos)
                                                        {

                                                            <option value="@odontologo.Id">@odontologo.Nombres @odontologo.Apellidos</option>
                                                        }

                                                    </select>

                                                    <div class="form-group row">


                                                        <div class="col-sm-6">
                                                            <br />
                                                            <br />
                                                            <label>Codigo del Tratamiento</label>
                                                            <input type="number" class="form-control form-control-user" placeholder="Ingrese Codigo De Tratamiento"
                                                                   name="Codigos" value="@Model.Codigos">
                                                            @Html.ValidationMessageFor(Model => Model.Codigos, null, new { @class = "text-danger" })

                                                        </div>
                                                        <div class="col-sm-6">
                                                            <br />
                                                            <br />
                                                            <label>Descripcion</label>
                                                            <input type="text" class="form-control form-control-user" placeholder="Breve Descripcion"
                                                                   name="Descripcion" value="@Model.Descripcion">
                                                            @Html.ValidationMessageFor(Model => Model.Descripcion, null, new { @class = "text-danger" })

                                                        </div>


                                                        <div class="col-sm-6">
                                                            <br /><br />

                                                            <label>Horario</label>
                                                            <input type="datetime-local" min="2020-08-28 00:00" class="form-control form-control-user" placeholder="Horarios"
                                                                   name="Horarios" value="@Model.Horarios">
                                                            @Html.ValidationMessageFor(Model => Model.Horarios, null, new { @class = "text-danger" })

                                                        </div>

                                                        <div class="col-sm-6">
                                                            <br /><br />
                                                            <label>Fecha Creacion</label>
                                                            <input type="date" min="2020-08-28" class="form-control form-control-user" placeholder="FechaCreacion"
                                                                   name="FechaCreacion" value="@Model.FechaCreacion">
                                                            @Html.ValidationMessageFor(Model => Model.FechaCreacion, null, new { @class = "text-danger" })

                                                        </div>
                                                    </div>

                                                    <hr />
                                                    <!--  <a href="" class="btn btn-primary btn-user btn-block"> -->
                                                    <center>

                                                        <button type="submit"  class="btn btn-primary">Grabar</button>

                                                        <a href="@Url.Action("Index", "Tratamientos")"><input type="button" value="Volver" class="btn btn-primary"></a>

                                                    </center>
                                                    </a>


                                                </div>

                                            </form>

                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    </table>


                </div>
            </div>
            <!-- Bootstrap core JavaScript-->
            <script src="vendor/jquery/jquery.min.js"></script>
            <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

            <!-- Core plugin JavaScript-->
            <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

            <!-- Custom scripts for all pages-->
            <script src="js/sb-admin-2.min.js"></script>
    </center>
</body>

</html>