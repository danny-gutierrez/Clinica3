@model Clinica.Models.Paciente
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Register</title>

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="css/sb-admin-2.min.css" rel="stylesheet">

</head>
<body class="bg-gradient-primary">
    <center>


        <div class="container">

            <div class="">
                <div class="">
                    <!-- Nested Row within Card Body -->


                    <div class="row">
                        <div class="col-lg-5 d-none  bg-light"> </div>
                        <div class="col-lg-10">
                            <div class="p-5">
                                <div class="text-center">
                                    <div class="card-body">

                                        <div class="card shadow mb-4">
                                            <div class="card-header py-3">
                                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                                    <h1 class="h4 text-gray-900 mb-4">Ver Paciente</h1>
                                                    <hr />

                                                    <form method="POST" action="@Url.Action("Index", "Pacientes")" class="user">
                                                        <div>
                                                            <div class="form-group row">
                                                                <div class="col-sm-6 mb-3 mb-sm-0">
                                                                    <label>Nombre</label>
                                                                    <input type="text" class="form-control form-control-user" value="@Model.Nombre" name="Nombre" placeholder="Nombre" disabled>

                                                                </div>


                                                                <div class="col-sm-6">
                                                                    <label>Apellido</label>
                                                                    <input type="text" class="form-control form-control-user" value="@Model.Apellido" name="Apellido" placeholder="Apellido" disabled>

                                                                </div>

                                                            </div>
                                                            <div class="form-group row">
                                                                <div class="col-sm-6 mb-3 mb-sm-0">
                                                                    <label>Rut</label>
                                                                    <input type="text" class="form-control form-control-user" value="@Model.Rut" name="Rut" placeholder="Rut" disabled>


                                                                </div>

                                                                <div class="col-sm-6">
                                                                    <label>Edad</label>
                                                                    <input type="number" class="form-control form-control-user" value="@Model.Edad" name="Edad" placeholder="Edad" disabled>


                                                                </div>
                                                            </div>

                                                            <div class="form-group">
                                                                <div class="">
                                                                    <label>Correo</label>
                                                                    <input type="email" class="form-control form-control-user" value="@Model.Correo" name="Correo" placeholder="Correo" disabled>


                                                                </div>
                                                            </div>

                                                            <fieldset>
                                                                <div class="form-group row">

                                                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                                                        <label>Región: </label>
                                                                        <select class="form-control form-control-user" value="@Model.Region" name="Region" id="region" disabled>
                                                                            <option value="@Model.Region">@Model.Region</option>
                                                                        </select>
                                                                    </div>
                                                                    <div class="col-sm-6">
                                                                        <label>Comuna: </label>
                                                                        <select class="form-control form-control-user" value="@Model.Comuna" name="Comuna" id="comuna" disabled>
                                                                            <option value="@Model.Comuna">@Model.Comuna</option>
                                                                        </select>
                                                                    </div>
                                                                </div>
                                                            </fieldset>


                                                         

                                                            <div class="form-group row">
                                                                <div class="col-sm-6 mb-3 mb-sm-0">
                                                                    <label>DIreccion</label>
                                                                    <input type="text" class="form-control form-control-user" value="@Model.Direccion" name="Direccion" placeholder="Direccion" disabled>
                                                                    @Html.ValidationMessageFor(Model => Model.Direccion, null, new { @class = "text-danger" })

                                                                </div>

                                                                <div class="col-sm-6">
                                                                    <label>Teléfono</label>
                                                                    <input type="number" class="form-control form-control-user" value="@Model.Telefono" name="Telefono" placeholder="Telefono" disabled>
                                                                    @Html.ValidationMessageFor(Model => Model.Telefono, null, new { @class = "text-danger" })

                                                                </div>
                                                            </div>


                                                            <hr />

                                                            <center>
                                                                <button type="submit" class="btn btn-primary">Volver</button>
                                                                <a href="@Url.Action("Historial", "Pacientes", new { id = Model.Id } )"><input type="button" value="Ver Historial" class="btn btn-primary"></a>
                                                            </center>


</form>

                                                </table>

                                            </div>




                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>




            </div>
        </div>
        <!-- Bootstrap core JavaScript-->
        <script src="vendor/jquery/jquery.min.js"></script>
        <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Core plugin JavaScript-->
        <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

        <!-- Custom scripts for all pages-->
        <script src="js/sb-admin-2.min.js"></script>
    </center>
</body>


</html>