@model Clinica.Models.Paciente
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Register</title>

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="css/sb-admin-2.min.css" rel="stylesheet">

</head>
<body class="bg-gradient-primary">
    <center>


        <div class="container">

            <div class="">
                <div class="">
                    <!-- Nested Row within Card Body -->


                    <div class="row">
                        <div class="col-lg-5 d-none  bg-light"> </div>
                        <div class="col-lg-10">
                            <div class="p-5">
                                <div class="text-center">
                                    <div class="card-body">

                                        <div class="card shadow mb-4">
                                            <div class="card-header py-3">
                                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                                    <h1 class="h4 text-gray-900 mb-4">Ver Paciente</h1>
                                                    <hr />

                                                    <form method="POST" action="@Url.Action("Index", "Pacientes")" class="user">
                                                        <div>
                                                            <div class="form-group row">
                                                                <div class="col-sm-6 mb-3 mb-sm-0">
                                                                    <label>Nombre</label>
                                                                    <input type="text" class="form-control form-control-user" value="@Model.Nombre" name="Nombre" placeholder="Nombre" disabled>

                                                                </div>


                                                                <div class="col-sm-6">
                                                                    <label>Apellido</label>
                                                                    <input type="text" class="form-control form-control-user" value="@Model.Apellido" name="Apellido" placeholder="Apellido" disabled>

                                                                </div>

                                                            </div>
                                                            <div class="form-group row">
                                                                <div class="col-sm-6 mb-3 mb-sm-0">
                                                                    <label>Rut</label>
                                                                    <input type="text" class="form-control form-control-user" value="@Model.Rut" name="Rut" placeholder="Rut" disabled>


                                                                </div>

                                                                <div class="col-sm-6">
                                                                    <label>Edad</label>
                                                                    <input type="number" class="form-control form-control-user" value="@Model.Edad" name="Edad" placeholder="Edad" disabled>


                                                                </div>
                                                            </div>

                                                            <div class="form-group">
                                                                <div class="">
                                                                    <label>Correo</label>
                                                                    <input type="email" class="form-control form-control-user" value="@Model.Correo" name="Correo" placeholder="Correo" disabled>


                                                                </div>
                                                            </div>


                                                            <div class="form-group">
                                                                <div class="">
                                                                    <label>Direccion</label>
                                                                    <input type="text" class="form-control form-control-user" value="@Model.Direccion" name="Direccion" placeholder="Direccion" disabled>

                                                                </div>
                                                            </div>

                                                            <div class=" form-group row">
                                                                <div class="col-sm-6 mb-3 mb-sm-0">
                                                                    <label>Telefono</label>
                                                                    <input type="tel" class="form-control form-control-user" value="@Model.Telefono" name="Telefono" placeholder="Telefono" disabled>

                                                                </div>
                                                            </div>
                                                            <hr />
                                                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">


                                                                <h1 class="h4 text-gray-900 mb-4">Boletas del Paciente</h1>
                                                                <tr>

                                                                    <th>Numero de Boleta</th>
                                                                    <th>Odontologo</th>
                                                                    <th>Valor</th>
                                                                    <th>Fecha</th>

                                                                </tr>



                                                                @foreach (Clinica.Models.Boleta boleta in ViewBag.boletas)
                                                                {
                                                                    <tr>
                                                                        <td>@boleta.NB</td>
                                                                        <td>@boleta.Odontologo</td>
                                                                        <td>@boleta.Valor</td>
                                                                        <td>@boleta.Fecha</td>

                                                                    </tr>

                                                                }



                                                        </div>
                                                </table>
                                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">


                                                    <h1 class="h4 text-gray-900 mb-4">Tratamientos del Paciente</h1>
                                                    <tr>
                                                        <th>Nombre</th>
                                                        <th>Doctor</th>
                                                        <th>Fecha</th>

                                                    </tr>



                                                    @foreach (Clinica.Models.Tratamiento tratamiento in ViewBag.tratamientos)
                                                    {
                                                <tr>
                                                    <td>@tratamiento.Nombres</td>
                                                    <td>@tratamiento.Especialistas</td>
                                                    <td>@tratamiento.FechaCreacion</td>

                                                </tr>

                                                    }



                                            </div>
                                            </table>
                                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">


                                                <h1 class="h4 text-gray-900 mb-4">Citas del Paciente</h1>
                                                <tr>

                                                    <th>Motivo</th>
                                                    <th>Doctor</th>

                                                    <th>Fecha</th>

                                                </tr>



                                                @foreach (Clinica.Models.Cita cita in ViewBag.citas)
                                                {
                                            <tr>
                                                <td>@cita.Motivo</td>
                                                <td>@cita.Odontologo</td>

                                                <td>@cita.Fecha</td>

                                            </tr>

                                                }

                                        </div>
                                        </table>

                                    </div>
                                    </table>
                                    <center>
                                        <button type="submit" class="btn btn-primary">Volver</button>
                                    </center>
                               

                                    </form>

                                    </table>

                                </div>




                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        </div>




        </div>
        </div>
        <!-- Bootstrap core JavaScript-->
        <script src="vendor/jquery/jquery.min.js"></script>
        <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Core plugin JavaScript-->
        <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

        <!-- Custom scripts for all pages-->
        <script src="js/sb-admin-2.min.js"></script>
    </center>
</body>


</html>