@model Clinica.Models.Paciente
<!DOCTYPE html>
<html lang="en">

<head>


    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Register</title>
    <meta name="description"
          content="Herramienta básica para validar un RUT Chileno en Internet mediante Módulo 11 escrito en JavaScript. Validador de RUT Chileno Online Gratis." />
    <meta name="keywords"
          content="RUT, chileno, rut chileno, validar rut, validar rut en linea, validar rut con javascript" />

    <script type="text/javascript" src="~/Content/js/validarut.js"></script>

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="css/sb-admin-2.min.css" rel="stylesheet">





    <script>


        function soloLetras(e) {
            key = e.keyCode || e.which;
            tecla = String.fromCharCode(key).toLowerCase();
            letras = " áéíóúabcdefghijklmnñopqrstuvwxyz";
            especiales = [8, 37, 39, 46];

            tecla_especial = false
            for (var i in especiales) {
                if (key == especiales[i]) {
                    tecla_especial = true;
                    break;
                }
            }

            if (letras.indexOf(tecla) == -1 && !tecla_especial)
                return false;
        }

        function limpia() {
            var val = document.getElementById("miInput").value;
            var tam = val.length;
            for (i = 0; i < tam; i++) {
                if (!isNaN(val[i]))
                    document.getElementById("miInput").value = '';
            }
        }
    </script>

</head>



<body class="bg-gradient-primary">
    <center>


        <div class="container">

            <div class="">
                <div class="">
                    <!-- Nested Row within Card Body -->


                    <div class="row">
                        <div class="col-lg-5 d-none  bg-light"> </div>
                        <div class="col-lg-10">
                            <div class="p-5">
                                <div class="text-center">
                                    <div class="card-body">

                                        <div class="card shadow mb-4">
                                            <div class="card-header py-3">

                                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                                    <h1 class="h4 text-gray-900 mb-4">Crear Paciente</h1>
                                                    <hr />
                                            </div>
                                            <form name="form1" onSubmit="javascript:return Rut(document.form1.rut.value)" method="POST" action="@Url.Action("Create", "Pacientes")" class="user">

                                                <div class="form-group row">
                                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                                        <label>Nombre</label>
                                                        <input type="text" class="form-control form-control-user" onkeypress="return soloLetras(event)" onblur="limpia()" id="miInput" value="@Model.Nombre" name="Nombre" placeholder="Nombre">
                                                        @Html.ValidationMessageFor(Model => Model.Nombre, null, new { @class = "text-danger" })
                                                    </div>


                                                    <div class="col-sm-6">
                                                        <label>Apellido</label>
                                                        <input type="text" class="form-control form-control-user" onkeypress="return soloLetras(event)" onblur="limpia()" id="miInput" value="@Model.Apellido" name="Apellido" placeholder="Apellido">
                                                        @Html.ValidationMessageFor(Model => Model.Apellido, null, new { @class = "text-danger" })
                                                    </div>

                                                </div>
                                                <div class="form-group row">
                                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                                        <label>Rut</label>
                                                        <input type="text" class="form-control form-control-user" name="rut" placeholder="Ingrese un RUT" value="@Model.Rut" />


                                                        
                                                    </div>

                                                    <div class="col-sm-6">
                                                        <label>Edad</label>
                                                        <input type="number" class="form-control form-control-user" value="@Model.Edad" name="Edad" placeholder="Edad">
                                                        @Html.ValidationMessageFor(Model => Model.Edad, null, new { @class = "text-danger" })

                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <div class="">
                                                        <label>Correo</label>
                                                        <input type="email" class="form-control form-control-user" value="@Model.Correo" name="Correo" placeholder="Correo">
                                                        @Html.ValidationMessageFor(Model => Model.Correo, null, new { @class = "text-danger" })

                                                    </div>
                                                </div>





                                                <fieldset>
                                                    <div class="form-group row">

                                                        <div class="col-sm-6 mb-3 mb-sm-0">
                                                            <label>Región: </label>
                                                            <select class="form-control form-control-user" value="@Model.Region" name="Region" id="region">
                                                                <option>Seleccione</option>

                                                            </select>
                                                            @Html.ValidationMessageFor(Model => Model.Region, null, new { @class = "text-danger" })

                                                        </div>
                                                        <div class="col-sm-6">
                                                            <label>Comuna: </label>
                                                            <select class="form-control form-control-user"name="Comuna" id="comuna"  value="@Model.Comuna">
                                                                <option >Seleccione</option>

                                                            </select>
                                                            @Html.ValidationMessageFor(Model => Model.Comuna, null, new { @class = "text-danger" })

                                                        </div>
                                                    </div>
                                                </fieldset>







                                                <div class="form-group row">
                                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                                        <label>DIreccion</label>
                                                        <input type="text" class="form-control form-control-user" value="@Model.Direccion" name="Direccion" placeholder="Direccion">
                                                        @Html.ValidationMessageFor(Model => Model.Direccion, null, new { @class = "text-danger" })

                                                    </div>

                                                    <div class="col-sm-6">
                                                        <label>Telefono</label>
                                                        <input type="number" class="form-control form-control-user" value="@Model.Telefono" name="Telefono" placeholder="Telefono">
                                                        @Html.ValidationMessageFor(Model => Model.Telefono, null, new { @class = "text-danger" })
                                                      

                                                    </div>
                                                </div>




                                                <br />
                                                <center>

                                                    <button type="submit" class="btn btn-primary">Grabar</button>
                                                    <a href="@Url.Action("Index", "Pacientes")"><input type="button" value="Volver" class="btn btn-primary"></a>
                                                </center>


                                            </form>



                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                </table>


            </div>
        </div>
        <!-- Bootstrap core JavaScript-->
        <script src=" https://unpkg.com/sweetalert/dist/sweetalert.min.js "></script>
        <script src="vendor/jquery/jquery.min.js"></script>
        <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Core plugin JavaScript-->
        <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

        <!-- Custom scripts for all pages-->
        <script src="js/sb-admin-2.min.js"></script>
        <script src="~/Content/js/script.js"></script>
        <script src="~/Content/js/jquery.selectric.min.js"></script>




        <!--    Plugin sweet Alert 2  aaaaaaaaaaaaaaaaaaaaaa-->
        <script src="~/Content/vendor/p1/jquery-3.3.1.min.js"></script>




        <script src="~/Content/vendor/p1/sweetalert2.all.min.js"></script>

        <script src="~/Content/vendor/p1/codigo.js"></script>
       


        <script src="~/Content/js/dist/jquery.georegionalizacion-chile_0.9.min.js"></script>

        <script>

            $('#region').geoRegionalizacion({
                regionDependiente: '#comuna'
            });
            $('#region-avanzado').geoRegionalizacion({
                regionDependiente: '#comuna-avanzado',
                onRegionSelect: function () {
                    console.log($(this).val());
                },
                onComunaSelect: function () {
                    console.log($(this).val());
                },
                onCreate: function () {
                    $('#region-avanzado, #comuna-avanzado').selectric('refresh');
                }
            });

        </script>




    </center>
</body>

</html>