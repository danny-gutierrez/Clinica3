                                                        @Html.ValidationMessageFor(Model => Model.Nombres, null, new { @class = "text-danger" })
                                                    </div>


                                                    <div class="col-sm-6">
                                                        <label>Apellido</label>
                                                        <input type="text" class="form-control form-control-user" onkeypress="return soloLetras(event)" onblur="limpia()" id="miInput" placeholder=" Apellido Odontologo"
                                                               name="Apellidos" value="@Model.Apellidos">
                                                        @Html.ValidationMessageFor(Model => Model.Apellidos, null, new { @class = "text-danger" })
                                                    </div>

                                                </div>

                                                <div class="form-group row">
                                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                                        <label>Rut</label>
                                                        <input type="text" class="form-control form-control-user" name="rut" placeholder="Ingrese un RUT" value="@Model.Rut" />
                                                        
                                                    </div>


                                                    <div class="col-sm-6">
                                                        <label>Edad</label>
                                                        <input type="number" class="form-control form-control-user" placeholder="Ingrese la Edad"
                                                               name="Edad" value="@Model.Edad">
                                                        @Html.ValidationMessageFor(Model => Model.Edad, null, new { @class = "text-danger" })
                                                    </div>

                                                </div>

                                                <div class="form-group row">
                                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                                        <label>Telefono</label>
                                                        <input type="tel" class="form-control form-control-user" placeholder="Ingrese Telefono"
                                                               name="Telefonos" value="@Model.Telefonos">
                                                        @Html.ValidationMessageFor(Model => Model.Telefonos, null, new { @class = "text-danger" })
                                                    </div>

                                                    <div class="col-sm-6">
                                                        <label>Direccion</label>
                                                        <input type="text" class="form-control form-control-user" placeholder="Ingrese Direccion"
                                                               name="Direcciones" value="@Model.Direcciones">
                                                        @Html.ValidationMessageFor(Model => Model.Direcciones, null, new { @class = "text-danger" })
                                                    </div>
                                                </div>

                                                    <fieldset>
                                                        <div class="form-group row">

                                                            <div class="col-sm-6 mb-3 mb-sm-0">
                                                                <label>Región: </label>
                                                                <select class="form-control form-control-user" value="@Model.Region" name="Region" id="region">
                                                                    <option value="">Seleccione</option>
                                                                </select>

                                                                @Html.ValidationMessageFor(Model => Model.Region, null, new { @class = "text-danger" })
                                                            </div>
                                                            <div class="col-sm-6">
                                                                <label>Comuna: </label>
                                                                <select class="form-control form-control-user" value="@Model.Comuna" name="Comuna" id="comuna">
                                                                    <option value="">Seleccione</option>
                                                                </select>

                                                                @Html.ValidationMessageFor(Model => Model.Comuna, null, new { @class = "text-danger" })
                                                            </div>
                                                        </div>
                                                    </fieldset>





                                                
                                                <div class="form-group row">
                                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                                        <label>Fecha Creacion</label>
                                                        <input type="date" min="2020-08-28" class="form-control form-control-user" placeholder="Fecha de Ingreso"
                                                               name="FechaIngreso" value="@Model.FechaIngreso">
                                                        @Html.ValidationMessageFor(Model => Model.FechaIngreso, null, new { @class = "text-danger" })
                                                    </div>



                                                    <div class="col-sm-6">
                                                        <label>Tratamiento</label>
                                                        <select class="form-control form-control-user" value="@Model.Tratamiento" name="idTratamiento" id="Tratamiento" placeholder="Tratamiento">

                                                            @foreach (Clinica.Models.Tratamiento tratamiento in ViewBag.tratamientos)
                                                            {

                                                                <option value="@tratamiento.Id">@tratamiento.Nombres  </option>
                                                            }


                                                        </select>

                                                    </div>
                                                </div>


                                                <div class="form-group">
                                                    <div class="">
                                                        <label>Correo</label>
                                                        <input type="email" class="form-control form-control-user" placeholder="Ingrese Correo"
                                                               name="Correos" value="@Model.Correos">
                                                        @Html.ValidationMessageFor(Model => Model.Correos, null, new { @class = "text-danger" })
                                                    </div>

                                                </div>





                                                <div class="form-group row">


                                                </div>
                                                <hr />
                                                <!--  <a href="" class="btn btn-primary btn-user btn-block"> -->
                                                <center>
                                                    <button type="submit" class="btn btn-primary">Grabar</button>
                                                    <a href="@Url.Action("Index", "Odontologos")"><input type="button" value="Volver" class="btn btn-primary"></a>
                                                </center>

                                            </form>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                </table>


            </div>
        </div>
