@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <center>
        <img src="~/Content/img/bdent.jpg" width="300" height="150" />

        <h1><strong style="color:#212F3D">BioEsthetic-Dent</strong></h1>
    </center>


</head>
<body>




    <center>
        <div class="container">

            <!-- Outer Row -->
            <div class="row justify-content-center">

                <div class="col-xl-10 col-lg-12 col-md-9">

                    <div class="container">
                        <div class="card-body p-0">
                            <!-- div centrar  -->
                            <div class="">


                                <div class="col-lg-6 d-none d-lg-block  "></div>

                                <div class="col-lg-7">

                                    <div class="p-5">
                                        <center>
                                            <div class="text-center">

